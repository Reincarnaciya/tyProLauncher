<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="A1" maxHeight="500.0" maxWidth="800.0" prefHeight="100.0"
            prefWidth="325.0" style="-fx-background-color: #363636;"
            stylesheets="@../StyleSheets/font.css" xmlns="http://javafx.com/javafx/8"
            fx:controller="tylauncher.Controllers.UpdaterController">
    <children>
        <Pane fx:id="UpdatingPane" prefHeight="100.0" prefWidth="325.0" style="-fx-background-color: #363636;">
            <children>
                <Text fx:id="TextUpdater" fill="WHITE" layoutX="67.0" layoutY="35.0" strokeType="OUTSIDE"
                      strokeWidth="0.0" text="Поиск обновлений " wrappingWidth="191.0"/>
                <ProgressBar layoutX="39.0" layoutY="50.0" prefHeight="28.0" prefWidth="248.0"/>
            </children>
        </Pane>
        <Pane fx:id="UpdateOrNoPane" disable="true" prefHeight="100.0" prefWidth="325.0"
              style="-fx-background-color: #363636;" visible="false">
            <children>
                <Button fx:id="UpdateButton" layoutX="14.0" layoutY="51.0" mnemonicParsing="false"
                        style="-fx-background-color: black;" text="обновить"/>
                <Button fx:id="LaterButton" layoutX="170.0" layoutY="51.0" mnemonicParsing="false"
                        style="-fx-background-color: black;" text="позже"/>
                <Text fill="WHITE" layoutX="14.0" layoutY="27.0" strokeType="OUTSIDE" strokeWidth="0.0"
                      text="Желаете обновить лаунчер?"/>
            </children>
        </Pane>
    </children>
</AnchorPane>
